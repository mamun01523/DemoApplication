@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3>Privacy Policy</h3>
                </div>
                <div class="card-body">
                    <h5>Data Collection</h5>
                    <p>We collect the following information when you register:</p>
                    <ul>
                        <li>Full Name</li>
                        <li>Username</li>
                        <li>Email Address</li>
                        <li>Phone Number (optional)</li>
                    </ul>

                    <h5>Password Security</h5>
                    <p>Your password is securely hashed and salted before storage. We never store plain text passwords.</p>

                    <h5>Session Management</h5>
                    <p>We use secure sessions to maintain your login state. Sessions expire after 30 minutes of inactivity.</p>

                    <h5>Cookies</h5>
                    <p>We use essential cookies for session management and the "Remember Me" functionality.</p>
                </div>
            </div>
        </div>
    </div>
</div>