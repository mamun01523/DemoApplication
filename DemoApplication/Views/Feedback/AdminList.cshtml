@model List<DemoApplication.Models.UserAccount.Feedback>

@{
    ViewData["Title"] = "Feedback Management";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-chat-dots"></i> Feedback Management</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="UserManagement" asp-action="Users">Admin</a></li>
                    <li class="breadcrumb-item active">Feedback</li>
                </ol>
            </nav>
        </div>
        <div class="col-auto">
            <a asp-controller="UserLog" asp-action="UserLog" class="btn btn-info">
                <i class="bi bi-clock-history"></i> View User Logs
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Feedback</h5>
                    <h2 class="card-text">@Model.Count</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Unread</h5>
                    <h2 class="card-text">@Model.Count(f => !f.IsRead)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Read</h5>
                    <h2 class="card-text">@Model.Count(f => f.IsRead)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">With Images</h5>
                    <h2 class="card-text">@Model.Count(f => !string.IsNullOrEmpty(f.ImagePath))</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Feedback Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">All Feedback</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>User</th>
                            <th>Subject</th>
                            <th>Message</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var feedback in Model)
                        {
                            <tr class="@(feedback.IsRead ? "" : "table-warning")">
                                <td>@feedback.FeedbackId</td>
                                <td>
                                    <strong>@feedback.User?.FullName</strong><br />
                                    <small class="text-muted">@feedback.User?.Email</small>
                                </td>
                                <td>@feedback.Subject</td>
                                <td>
                                    @if (feedback.Message.Length > 100)
                                    {
                                        @feedback.Message.Substring(0, 100) <text>...</text>
                                    }
                                    else
                                    {
                                        @feedback.Message
                                    }
                                </td>
                                <td>@feedback.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    @if (feedback.IsRead)
                                    {
                                        <span class="badge bg-success">Read</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Unread</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="AdminView" asp-route-id="@feedback.FeedbackId"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@feedback.FeedbackId"
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>