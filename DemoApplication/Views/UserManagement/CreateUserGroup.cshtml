@model DemoApplication.ViewModels.UserGroupViewModel

@{
    ViewData["Title"] = "Create User Group";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mt-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Create User Group</h4>
            </div>
            <div class="card-body">
                <form asp-action="CreateUserGroup" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="UserGroupName" class="form-label"></label>
                        <input asp-for="UserGroupName" class="form-control" placeholder="Enter user group name" />
                        <span asp-validation-for="UserGroupName" class="text-danger"></span>
                        <div class="form-text">e.g., Manager, Editor, Viewer, etc.</div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="UserGroups" class="btn btn-secondary me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Create Group
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}