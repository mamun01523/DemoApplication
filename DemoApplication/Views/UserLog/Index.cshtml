@model List<DemoApplication.ViewModels.UserLogViewModel>

@{
    ViewData["Title"] = "User Activity Logs";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2><i class="bi bi-clock-history"></i> User Activity Logs</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">User Logs</li>
                </ol>
            </nav>
        </div>
        <div class="col-auto">
            <a asp-action="Export"
               asp-route-startDate="@ViewBag.StartDate"
               asp-route-endDate="@ViewBag.EndDate"
               asp-route-userId="@ViewBag.SelectedUserId"
               class="btn btn-success">
                <i class="bi bi-download"></i> Export CSV
            </a>
            <a asp-action="ClearOldLogs" class="btn btn-warning" onclick="return confirm('Clear logs older than 30 days?')">
                <i class="bi bi-trash"></i> Clear Old Logs
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-door-open"></i> Total Logins</h5>
                    <h2 class="card-text">@ViewBag.TotalLogins</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-person-check"></i> Active Sessions</h5>
                    <h2 class="card-text">@ViewBag.ActiveSessions</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-clock"></i> Avg Session</h5>
                    <h2 class="card-text">@ViewBag.AverageSessionMinutes.ToString("0") min</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-calendar"></i> Date Range</h5>
                    <h6 class="card-text">@ViewBag.StartDate to @ViewBag.EndDate</h6>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Form -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0">Filter Logs</h5>
        </div>
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Start Date</label>
                    <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">End Date</label>
                    <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">User</label>
                    <select name="userId" class="form-select">
                        <option value="">-- All Users --</option>
                        @foreach (var user in ViewBag.Users)
                        {
                            <option value="@user.UserId" selected="@(ViewBag.SelectedUserId?.ToString() == user.UserId.ToString())">
                                @user.FullName (@user.Username)
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-filter"></i> Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Logs Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Activity Logs</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Log ID</th>
                            <th>User</th>
                            <th>IP Address</th>
                            <th>Login Time</th>
                            <th>Logout Time</th>
                            <th>Duration</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td>@log.LogId</td>
                                <td>
                                    <strong>@log.FullName</strong><br />
                                    <small class="text-muted">@log.UserName</small>
                                </td>
                                <td>
                                    <code>@log.IpAddress</code><br />
                                    <small class="text-muted">@log.UserAgent</small>
                                </td>
                                <td>@log.LoginTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>
                                    @if (log.LogoutTime.HasValue)
                                    {
                                        @log.LogoutTime.Value.ToString("yyyy-MM-dd HH:mm:ss")
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Still Active</span>
                                    }
                                </td>
                                <td>
                                    @if (log.SessionDurationMinutes.HasValue)
                                    {
                                        <span class="badge bg-info">@log.SessionDurationMinutes.Value min</span>
                                    }
                                </td>
                                <td>
                                    @if (log.LogoutTime.HasValue)
                                    {
                                        <span class="badge bg-secondary">Logged Out</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="UserActivity" asp-route-id="@log.UserId" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-person-lines-fill"></i> User Activity
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <small class="text-muted">Showing @Model.Count log entries</small>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Auto-dismiss alerts
            setTimeout(function() {
                $('.alert').alert('close');
            }, 5000);
        });
    </script>
}